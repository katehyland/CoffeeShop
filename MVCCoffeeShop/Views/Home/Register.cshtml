@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registration Page</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Home" asp-action="MakeNewUser()" method="post" onsubmit="return Validation()">
            <div class="form-group">
                <label> Username</label>
                <input type="text" class="form-control" required name="username" pattern=".{6,}" />
            </div>
            <div class="form-group">
                <label> Email</label>
                <input type="email" class="form-control" required name="email"/>
            </div>
            <div class="form-group">
                <label> Password</label>
                <p class="password-info">Password must be at least 6 characters.</p>
                <input type="password" name="Password" id="Password" minlength="6" class="form-control" required pattern=".{6,}" />
            </div>
            <div class="form-group">
                <label> Confirm Password</label>
                <input type="password" name="ConfirmPassword" id="ConfirmPassword" required class="form-control" />
            </div>
            <div class="form-group">
                <label> Phone</label>
                <input placeholder="800-123-4567" type="tel" maxlength="11" required name="phone" pattern="[a-z0-9._%+-]+@@[a-z0-9.-]+\.[a-z]{2, 4}$" class="form-control" />
            </div>
            <div class="form-group">
                <select name="phone-type" size="1" required>
                    <option value="" disabled selected> Phone Type</option>
                    <option value="home">Home</option>
                    <option value="cell">Cell</option>
                    <option value="work">Work</option>
                    <option value="other">Other</option>
                </select>
            </div>
            <div class="form-group">
               <label>I agree to whatever filling out this form binds me to. </label>
                <input type="checkbox" required />
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="form-control registration-submit-button" />
            </div>
        </form>
    </div>
</div>
<script>
    function Validation() {
        //querySelector requires us to pass in if its an #ID or .class, and the value
        var password = document.querySelector("#Password").value;
        var confirmPassword = document.querySelector("#ConfirmPassword").value;

        console.log(password);
        console.log(confirmPassword);


        if (password === confirmPassword) {
            console.log("PASSWORDS MATCH");
            return true;
        } else {
            console.log("FALSE");
            alert("Passswords do not match. Please try again.")
            return false;
        }

    }
</script>